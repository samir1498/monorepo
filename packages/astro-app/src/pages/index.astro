---
import { App } from "../components/react/App";
import  AppSvelte  from "../components/svelte/TaskApp.svelte";


---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body class="grid grid-cols-2 items-center justify-center h-screen w-1/2 mx-auto">
		<div class="flex flex-col items-center justify-center">
			<span class="text-4xl">React App</span>
			<App client:load/>
		</div>
		<div class="flex flex-col items-center justify-center ">
			<span class="text-4xl">Svelte App</span>
			<AppSvelte client:load/>
		</div>
	</body>
</html>
